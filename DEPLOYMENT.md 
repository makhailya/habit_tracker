    proxy_pass http://localhost:8000;  # Docker –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
    # –≤–º–µ—Å—Ç–æ unix:/home/habituser/habit_tracker/habit_tracker.sock
    ...
